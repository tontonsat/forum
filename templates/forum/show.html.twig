{% extends 'base.html.twig' %}

{% form_theme formComment 'bootstrap_4_layout.html.twig' %}
{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          {{ message }}
        </div>
    {% endfor %}
    <section class="articles">
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }} par {{ article.author.username }} (catégorie {{ article.category.title }})
                <div class="content">
                    <img src="{{ article.image }}" alt="">
                    <p>{{ article.content }}</p>
                </div>
            </div>
        </article>
    </section>
    <section class="new-comment">
        {% if app.user is not null %}
            {{ form_start(formComment) }}
                <div class="form-row">
                    <div class="form-group col-md-6">
                        {{ form_row(formComment.content, {'attr': {'placeholder': "Laisser un commentaire"}}) }}
                    </div>
                    <div class="form-group col-md-6">
                        <button type="submit" class="btn btn-success">Envoyer</button>
                    </div>
                </div>
            {{ form_end(formComment) }}
        {% endif %}
    </section>
    <section class="comments">
        {% if article.comments is empty %}
            <p>Soyez le premier à commenter!</p>
        {% else %}
            <h2>{{ article.comments.count }} commentaires</h2>
            {% for comment in article.comments %}
                <div class="comment">
                    <div class="row">
                        <div class="col-3">
                            {% if app.user is not null and comment.author.id == app.user.id %}
                                <a href="{{path('forum_deleteComment', {'id': comment.id})}}" class="btn btn-primary">x</a>
                            {% endif %}
                            {{ comment.createdAt | date('d/m/Y à H:i') }} par {{ comment.author.username }}
                        </div>
                        <div class="col">
                            {{ comment.content }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </section>
{% endblock %}
